      <DatePicker fx:id="birthDate" layoutX="274.0" layoutY="153.0" promptText="Birth Date" />
      <DatePicker fx:id="startWorkingDate" layoutX="274.0" layoutY="185.0" promptText="Start Working Date" />
      <ComboBox fx:id="playerLevel" layoutX="286.0" layoutY="218.0" prefWidth="150.0" promptText="Player's level:" />
      <ComboBox fx:id="playerCity" layoutX="286.0" layoutY="250.0" prefWidth="150.0" promptText="Player's city:" />
