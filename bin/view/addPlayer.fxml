      <ComboBox fx:id="playerPosition" layoutX="286.0" layoutY="444.0" prefWidth="150.0" promptText="Player's position" />
      <Label layoutX="300.0" layoutY="19.0" text="Add Player" textFill="WHITE">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
