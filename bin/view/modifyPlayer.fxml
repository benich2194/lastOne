<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="modifyPlayer" prefHeight="550.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.modifyPlayerController">
   <children>
      <ImageView fitHeight="590.0" fitWidth="701.0" style="-fx-opacity: 0.2;">
         <image>
            <Image url="@../../Soccer-Stadium.jpg" />
         </image>
      </ImageView>
      <Button fx:id="back" layoutX="24.0" layoutY="24.0" mnemonicParsing="false" onAction="#goBack" text="Back" />
      <TableView fx:id="playerTableView" editable="true" layoutX="4.0" layoutY="77.0" prefHeight="393.0" prefWidth="689.0" style="-fx-opacity: 0.9;">
        <columns>
          <TableColumn fx:id="playerID" editable="false" prefWidth="30.0" text="ID" />
          <TableColumn fx:id="playerFN" prefWidth="33.0" text="First Name" />
            <TableColumn fx:id="playerLN" prefWidth="64.0" text="Last Name" />
            <TableColumn fx:id="playerBday" prefWidth="62.0" text="Birthdate" />
            <TableColumn fx:id="playerSW" prefWidth="75.0" text="Start Work" />
            <TableColumn fx:id="playerLvl" prefWidth="79.0" text="Level" />
            <TableColumn fx:id="playerAddress" minWidth="0.0" prefWidth="88.0" text="Address" />
            <TableColumn fx:id="playerRLK" prefWidth="37.0" text="Right Leg Kicker" />
            <TableColumn fx:id="playerVal" prefWidth="211.0" text="Value" />
            <TableColumn fx:id="playerPosition" prefWidth="75.0" text="Position" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</AnchorPane>
