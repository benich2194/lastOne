<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="modifyTrophy" prefHeight="550.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.modify.controller.modifyTrophyController">
   <children>
      <ImageView fitHeight="590.0" fitWidth="701.0" style="-fx-opacity: 0.2;">
         <image>
            <Image url="@../../images/Soccer-Stadium.jpg" />
         </image>
      </ImageView>
      <Button fx:id="back" layoutX="24.0" layoutY="24.0" mnemonicParsing="false" onAction="#goBack" text="Back" />
      <Label layoutX="277.0" layoutY="50.0" style="-fx-opacity: 0.8;" text="Modify Trophy" textFill="WHITE">
         <font>
            <Font name="System Bold" size="21.0" />
         </font>
      </Label>
      <ComboBox fx:id="troList" layoutX="124.0" layoutY="99.0" onAction="#showDP" prefHeight="33.0" prefWidth="437.0" promptText="Select trophy to modify:" />
      <Label fx:id="datelbl" layoutX="121.0" layoutY="194.0" text="Please select a new Date:">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
      <DatePicker fx:id="datepicker" layoutX="294.0" layoutY="189.0" onAction="#hidelbl" />
      <Label fx:id="lblMessage" layoutX="173.0" layoutY="279.0" prefHeight="33.0" prefWidth="390.0" textFill="#0d718d">
         <font>
            <Font name="System Bold Italic" size="14.0" />
         </font>
      </Label>
      <Button fx:id="buttonModify" layoutX="278.0" layoutY="343.0" mnemonicParsing="false" onAction="#modifyPressed" prefHeight="43.0" prefWidth="140.0" text="Modify" />
   </children>
</AnchorPane>
