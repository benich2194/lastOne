<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="modifyPassword" prefHeight="550.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.modify.controller.modifyPasswordController">
   <children>
      <ImageView fitHeight="590.0" fitWidth="701.0" style="-fx-opacity: 0.2;">
         <image>
            <Image url="@../../Soccer-Stadium.jpg" />
         </image>
      </ImageView>
      <Button fx:id="back" layoutX="24.0" layoutY="24.0" mnemonicParsing="false" onAction="#goBack" text="Back" />
      <Label layoutX="229.0" layoutY="36.0" prefHeight="28.0" prefWidth="266.0" style="-fx-opacity: 0.8;" text="Change Password" textFill="WHITE">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
      </Label>
      <ComboBox fx:id="userList" layoutX="35.0" layoutY="103.0" prefHeight="25.0" prefWidth="621.0" promptText="Choose user:" />
      <Label layoutX="205.0" layoutY="274.0" text="New Password:" />
      <Button layoutX="294.0" layoutY="468.0" mnemonicParsing="false" onAction="#goToChange" prefHeight="49.0" prefWidth="103.0" text="Submit" />
      <Label fx:id="labelSuccess" layoutX="84.0" layoutY="420.0" prefHeight="33.0" prefWidth="555.0" textFill="#017c87">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Label>
      <PasswordField fx:id="newPass" alignment="CENTER" layoutX="285.0" layoutY="270.0" prefHeight="26.0" prefWidth="181.0" stylesheets="@../Design.css" />
   </children>
</AnchorPane>
