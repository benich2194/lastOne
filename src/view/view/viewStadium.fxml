            <TableColumn fx:id="stadiumPhoneNum" prefWidth="75.0" text="Phone" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Label layoutX="278.0" layoutY="28.0" style="-fx-opacity: 0.8;" text="View Stadium" textFill="WHITE">
