      <Label layoutX="302.0" layoutY="35.0" text="Add Coach" textFill="WHITE">
         <font>
            <Font name="System Bold" size="19.0" />
         </font>
      </Label>
      <TextField fx:id="coachId" alignment="CENTER" layoutX="276.0" layoutY="71.0" promptText="Coach's id" />
      <TextField fx:id="firstName" alignment="CENTER" layoutX="276.0" layoutY="105.0" promptText="First Name" />
      <TextField fx:id="lastName" alignment="CENTER" layoutX="276.0" layoutY="138.0" promptText="Last Name" />
      <DatePicker fx:id="birthDate" layoutX="264.0" layoutY="171.0" promptText="Birth Date" />
