<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="removeStadium" prefHeight="550.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.remove.controller.removeStadiumController">
   <children>
      <ImageView fitHeight="590.0" fitWidth="701.0" style="-fx-opacity: 0.2;">
         <image>
            <Image url="@../../Soccer-Stadium.jpg" />
         </image>
      </ImageView>
      <Button fx:id="back" layoutX="24.0" layoutY="24.0" mnemonicParsing="false" onAction="#goBack" text="Back" />
      <ComboBox fx:id="stadiumList" layoutX="168.0" layoutY="90.0" prefHeight="25.0" prefWidth="365.0" promptText="Please choose a stadium to remove" />
      <Button fx:id="removeButton" layoutX="212.0" layoutY="306.0" mnemonicParsing="false" onAction="#removeStadium" prefHeight="38.0" prefWidth="249.0" text="Remove Selected Stadium" />
      <Label fx:id="success" layoutX="223.0" layoutY="488.0" prefHeight="28.0" prefWidth="281.0" text="Stadium removed succesfully" textFill="WHITE" visible="false">
         <font>
            <Font name="System Bold" size="19.0" />
         </font>
      </Label>
      <Label layoutX="237.0" layoutY="37.0" prefHeight="38.0" prefWidth="227.0" text="Remove Stadium" textFill="WHITE">
         <font>
            <Font name="System Bold" size="21.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
