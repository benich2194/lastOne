<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="addTrophy" prefHeight="550.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.add.controller.addTrophyController">
   <children>
      <ImageView fitHeight="590.0" fitWidth="701.0" style="-fx-opacity: 0.2;">
         <image>
            <Image url="@../../images/Soccer-Stadium.jpg" />
         </image>
      </ImageView>
      <Button fx:id="back" layoutX="24.0" layoutY="24.0" mnemonicParsing="false" onAction="#goBack" text="Back" />
      <Label layoutX="265.0" layoutY="50.0" prefHeight="37.0" prefWidth="197.0" style="-fx-opacity: 0.8;" text="Add Trophy" textFill="WHITE">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
      </Label>
      <Button fx:id="addTrophyButton" layoutX="254.0" layoutY="326.0" mnemonicParsing="false" onAction="#goToaddTrophy" prefHeight="33.0" prefWidth="149.0" text="Add Trophy" />
      <ComboBox fx:id="chooseTrophy" layoutX="254.0" layoutY="108.0" onAction="#showComponents" prefHeight="25.0" prefWidth="149.0" promptText="Choose Trophy:" />
      <ComboBox fx:id="chooseWinner" layoutX="254.0" layoutY="163.0" prefHeight="25.0" prefWidth="149.0" promptText="Choose Winner:" />
      <DatePicker fx:id="chooseDate" layoutX="248.0" layoutY="217.0" prefHeight="26.0" prefWidth="160.0" />
   </children>
</AnchorPane>
