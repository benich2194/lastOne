<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="playerMenu" prefHeight="550.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.menus.controller.playerMenuController">
   <children>
      <ImageView fitHeight="590.0" fitWidth="701.0" style="-fx-opacity: 0.1;">
         <image>
            <Image url="@../../images/Soccer-Stadium.jpg" />
         </image>
      </ImageView>
      <Button fx:id="addPlayer" layoutX="251.0" layoutY="45.0" mnemonicParsing="false" onAction="#goToAddPlayer" prefHeight="54.0" prefWidth="196.0" stylesheets="@Design.css" text="Add Player" />
      <Button fx:id="removePlayer" layoutX="252.0" layoutY="208.0" mnemonicParsing="false" onAction="#goToRemovePlayer" prefHeight="54.0" prefWidth="196.0" stylesheets="@Design.css" text="Remove Player" />
      <Button fx:id="modPlayer" layoutX="251.0" layoutY="126.0" mnemonicParsing="false" onAction="#goToModifyPlayer" prefHeight="54.0" prefWidth="196.0" stylesheets="@Design.css" text="Modify Player" />
      <Label layoutX="287.0" layoutY="14.0" style="-fx-opacity: 0.7;" text="Player Menu" textFill="WHITE">
         <font>
            <Font name="System Bold" size="21.0" />
         </font>
      </Label>
      <Button fx:id="removeFromTeamButton" layoutX="252.0" layoutY="450.0" mnemonicParsing="false" onAction="#goToRemovePlayerFromTeam" prefHeight="54.0" prefWidth="196.0" stylesheets="@Design.css" text="Remove Player From Team" />
      <Button fx:id="viewPlayer" layoutX="252.0" layoutY="289.0" mnemonicParsing="false" onAction="#goToViewPlayers" prefHeight="54.0" prefWidth="196.0" stylesheets="@Design.css" text="View Players" />
      <Button fx:id="sortFTPButton" layoutX="252.0" layoutY="372.0" mnemonicParsing="false" onAction="#goToSortFirstTeamPlayers" prefHeight="54.0" prefWidth="196.0" stylesheets="@Design.css" text="Sort First Team Players" />
      <Button fx:id="removeFirst" layoutX="251.0" layoutY="522.0" mnemonicParsing="false" onAction="#goToRemovePlayerFromFirstTeam" prefHeight="54.0" prefWidth="196.0" stylesheets="@Design.css" text="Remove Player From First Team" />
   </children>
</AnchorPane>
